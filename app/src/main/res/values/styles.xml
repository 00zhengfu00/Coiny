<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- default color of ANY text (menu items, labels, etc. ) unless color attribute is overridden -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- color of the default background -->
        <item name="android:windowBackground">@color/backgroundColor</item>

    </style>

    <style name="ButtonRegular" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/button_back</item>
    </style>


    <style name="ButtonRegularNoBackground" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ButtonSecondarySelected" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/button_secondary_back</item>
    </style>

    <style name="ButtonSecondaryUnSelected" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/button_back_unselected</item>
    </style>


    <style name="DisplayNumberHuge" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="DisplayNumberLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="DisplayNumberMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="DisplayNumberTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextRegular" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextRegularSecondary" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextTitleSecondary" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>


    <style name="TextSubHead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextSubHeadSecondary" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextSmallSecondary" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="rtl_RecyclerTabLayout.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tabTextColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextInputLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/secondaryTextColor</item>
    </style>

    <style name="CoinTransaction" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="SearchSwitchTheme">
        <item name="colorControlActivated">@color/switchColor</item>
    </style>

    <!--- coiny text style -->

    <style name="CoinyText" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">4sp</item>
    </style>


    <style name="CoinyText.CaptionSmall" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CoinyText.Caption" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinyText.CaptionAlternate" parent="CoinyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CoinyText.Title" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinyText.TitleAlternate" parent="CoinyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CoinyText.Body" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinyText.BodyTertiary" parent="CoinyText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CoinyText.Body1" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoinyText.Body1Alternate" parent="CoinyText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoinyText.Body2" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CoinyText.Body3" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CoinyText.Big" parent="CoinyText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">42sp</item>
    </style>

</resources>
