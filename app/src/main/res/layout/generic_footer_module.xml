<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/generic8dp"
    android:layout_marginStart="@dimen/generic8dp"
    android:layout_marginTop="@dimen/generic16dp">

    <TextView
        android:id="@+id/tvFooter"
        style="@style/CoinyText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/about" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/generic16dp"
        app:layout_constraintTop_toBottomOf="@id/tvFooter" />

</android.support.constraint.ConstraintLayout>