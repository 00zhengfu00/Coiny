<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        >

        <TextView
            android:id="@+id/noOfCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/generic16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10"
            />

        <TextView
            android:id="@+id/coinsFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="164dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Coins"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/generic8dp"
            app:layout_constraintEnd_toStartOf="@+id/equityValueFieldName"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noOfCoins"
            />

        <TextView
            android:id="@+id/equityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="184dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/generic16dp"
            app:layout_constraintStart_toEndOf="@+id/noOfCoins"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="$575.00"
            />

        <TextView
            android:id="@+id/equityValueFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Equity Value"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/generic8dp"
            app:layout_constraintStart_toStartOf="@+id/equityValue"
            app:layout_constraintTop_toBottomOf="@+id/equityValue"
            />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="30dp"
            android:background="@color/mainTextColor"
            app:layout_constraintBottom_toTopOf="@+id/averageCostFieldName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coinsFieldName"
            />

        <TextView
            android:id="@+id/averageCostFieldName"
            android:layout_width="82dp"
            android:layout_height="20dp"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="32dp"
            android:text="Average Cost"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/generic8dp"
            app:layout_constraintBottom_toTopOf="@+id/totalReturnFieldName"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/totalReturnFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="225dp"
            android:text="Total Return"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/generic8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/todayReturnFieldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:text="Today's Return"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/generic8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalReturnFieldName"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>