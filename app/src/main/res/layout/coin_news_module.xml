<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/generic16dp">

    <TextView
        android:id="@+id/tvAboutCoinLabel"
        style="@style/TextRegularSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic8dp"
        android:text="@string/recent_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/generic12dp"
        app:cardBackgroundColor="@color/backgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAboutCoinLabel"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/generic16dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clFirstArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_marginStart="@dimen/generic16dp"
                android:layout_marginEnd="@dimen/generic16dp">

                <TextView
                    android:id="@+id/tvFirstArticleTitle"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Shark Tank Investor, Robert Herjavec, Bullish on Cryptocurrency and Blockchain" />

                <TextView
                    android:id="@+id/tvFirstArticleTime"
                    style="@style/TextSmallSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/generic4dp"
                    tools:text="10:15 PM"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFirstArticleTitle" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clSecondArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/generic16dp"
                android:layout_marginEnd="@dimen/generic16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_marginTop="@dimen/generic16dp"
                app:layout_constraintTop_toBottomOf="@id/clFirstArticle">

                <TextView
                    android:id="@+id/tvSecondArticleTitle"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Dow Jones Drops Another 1000 Points In A Week, Crypto Markets Don\u2019t Quite Follow" />

                <TextView
                    android:id="@+id/tvSecondArticleTime"
                    style="@style/TextSmallSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/generic4dp"
                    tools:text="10:15 PM"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSecondArticleTitle" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clThirdArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/generic16dp"
                android:layout_marginEnd="@dimen/generic16dp"
                android:layout_marginTop="@dimen/generic16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/clSecondArticle">

                <TextView
                    android:id="@+id/tvThirdArticleTitle"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Goldman Sachs Claims Cryptocurrency Will Collapse, While Privately Building Billion Dollar Trading Desk" />

                <TextView
                    android:id="@+id/tvThirdArticleTime"
                    style="@style/TextSmallSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/generic4dp"
                    tools:text="10:15 PM"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvThirdArticleTitle" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/dividerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clThirdArticle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/generic12dp"
                android:layout_height="1dp"
                android:background="@color/secondaryTextColor" />

            <Button
                android:id="@+id/tvMore"
                style="@style/ButtonRegularNoBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/dividerView"
                android:text="@string/more" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/loadingAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="hourglass.json"
        app:lottie_loop="true" />

</android.support.constraint.ConstraintLayout>